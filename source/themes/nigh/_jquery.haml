= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js'
:javascript
  window.jQuery || document.write('<script src="themes/nigh/js/jquery-1.8.3.min.js"><\/script>')
%script{:src => "themes/nigh/js/detectmobilebrowser.js", :type => ""}
%script{:src => "themes/nigh/js/followMeBar.js", :type => ""}
%script{:src => "themes/nigh/js/bootstrap/affix.js", :type => ""}
:javascript
  $( document ).ready(function() {
    if(jQuery.browser.mobile) {

      // Disable affix
      $(window).off('.affix')
      $('.widget-contact').removeData('affix').removeClass('affix affix-top affix-bottom')

    } else {
      // Back to top button
      $(window).scroll(function(){
        if ($(this).scrollTop() > 400) $('#backtotop').fadeIn()
        else $('#backtotop').fadeOut()
      })
      $('#backtotop').click(function(){
        $("html, body").animate({ scrollTop: 0 }, 600)
        return false;
      })

      // Affix
      $('.widget-contact').affix({
        offset: {
          top: 0
        }
      })
    }

  });
